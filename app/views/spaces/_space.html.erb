<%= link_to space_path(space) do %>
  <div class="card card-side bg-base-100 shadow-xl">
    <figure class="w-[200px]"><%= image_tag space.main_image, size: '400x225' %></figure>
    <div class="card-body">
      <h2 class="card-title"><%= space.name %></h2>
      <div class="flex mb-[5px]">
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd" />
          </svg>
        </span>
        <span><%= space.nearest_station %></span>
      </div>
      <div class="flex mb-[5px]">
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
        </span>
        <span><%= space.address %></span>
      </div>
      <div class="flex mb-[5px]">
        <% space.features.each do |feature| %>
          <div class="badge badge-outline">
            <%= feature.name %>
          </div>
        <% end %>
      </div>
      <div class="rating">
        <% space.rating.times do %>
          <div class="mask mask-star-2 bg-orange-400 w-[20px] h-[20px]"></div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>